<%= form_with model: @credit_card, url: payment_path, method: :post do |f| %>

  <div class="mt-5 pt-5 form-head">
    <div class='pb-1 text-center'>
      <%= f.label :card_number, "Card number", class:"col-form-label"%>
    </div>
    <div class='pb-4 col-md-6 offset-md-3'>
      <%= f.number_field :card_number, class:"form-control text-center", placeholder: 'Card number'  %>
    </div>

    <div class='pb-1 text-center'>
      <%= f.label :price, "Price", class:"col-form-label"%>
    </div>
    <div class='pb-4 col-md-6 offset-md-3'>
      <%= f.number_field :price, class:"form-control text-center", placeholder: 'Enter donate amount'  %>
    </div>

    <div class="row col-md-6 offset-md-3">
      <div class="col-4">
        <div class='pb-1 text-center'>
          <%= f.label :month, "Month", class:"col-form-label" %>
        </div>
        <div class='pb-4'>
          <%= f.number_field :month, class:"form-control text-center", placeholder: 'Expired month' %>
        </div>
      </div>
      <div class="col-4">
        <div class='pb-1 text-center'>
          <%= f.label :year, "Year", class:"col-form-label" %>
        </div>
        <div class='pb-4'>
          <%= f.number_field :year, class:"form-control text-center", placeholder: 'Expired year' %>
        </div>
      </div>
      <div class="col-4">
        <div class='pb-1 text-center'>
          <%= f.label :cvc, "CVC", class:"col-form-label" %>
        </div>
        <div class='pb-4'>
          <%= f.number_field :cvc, class:"form-control text-center", placeholder: 'CVC' %>
        </div>
      </div>
    </div>

    <div class="actions text-center pt-3 mb-5">
      <%= f.submit 'Donate', class:"btn btn-outline-light mr-3" %>
    </div>
  </div>
<% end %>
